# ===========================================
# MGtranslate - Environment Configuration
# ===========================================

# Google Cloud Credentials
GOOGLE_APPLICATION_CREDENTIALS=./config/credentials/gcp-service-account.json
GOOGLE_PROJECT_ID=mgtranslate-479319

# Bot Account (Google Meet login)
BOT_GOOGLE_EMAIL=your-bot@gmail.com
BOT_GOOGLE_PASSWORD=your-app-specific-password

# AI Provider Selection (google | selfhosted)
AI_PROVIDER=google

# Self-hosted AI (when AI_PROVIDER=selfhosted)
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3
COQUI_TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# Services Ports
ORCHESTRATOR_PORT=3001
UI_PORT=4000

# WebSocket URLs (for internal service communication)
ORCHESTRATOR_WS=ws://localhost:3001/ws

# Audio Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_MS=250

# Database
REDIS_URL=redis://localhost:6379
